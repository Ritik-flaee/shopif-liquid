<div class="container">
    <div class="row">
      {% if section.settings.gallery_image %}
          <img src="{{ section.settings.gallery_image | img_url: 'medium' }}">
      {% endif %}
      <h3>{{ section.settings.gallery_title }}</h3>
    </div>
</div>



{% schema %}
    {
        "name": "Gallery Liquid",
        "settings": [
            {
                "type": "image_picker",
                "id": "gallery_image",
                "label": "Select Image"
            },
            {
                "type": "text",
                "id": "gallery_title",
                "label": "Title"
            }
        ],
        "presets": [
            {
                "name": "Gallery Liquid",
                "category": "Reference"
            }
        ]
    }
{% endschema %}