<h1>Iteration Tags</h1>

{% for product in collection.products %}
   <h1>{{ product.title }}</h1>
{% else %}
  No products!
{% endfor %}
{% for product in collection.products %}
    <h1>{{ product.title }}</h1>
    {% break %}
{% endfor %}
{% for product in collection.products %}
    {% continue %}
    <h1>{{ product.title }}</h1>
{% endfor %}
{% for i in (1..10) %}
   {{ i }}    
{% endfor %}
{% for i in (1..10) limit: 5 %}
    {{ i }}    
 {% endfor %}
 {% for i in (1..10) offset: 6 %}
    {{ i }}    
 {% endfor %}
| {% assign sp = 1 %}
| {% assign bp = 10 %}
{% for i in (sp..bp) %}
    {{ i }}
{% endfor %}
{% for i in (sp..bp) reversed %}
    {{ i }}
{% endfor %}

