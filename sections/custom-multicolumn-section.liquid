<style>
  .multicolumn-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 20px;
    box-sizing: border-box;
  }

  .column {
    flex: 0 0 300px;
    padding: 10px;
    background-color: #ffffff;
    border: 1px solid #ffffff;
    text-align: left;
    box-sizing: border-box;
    margin: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .column a {
    text-decoration: none; /* Remove underline from the title */
    color: black;
  }

  .column img {
    flex-grow: 1;
    width: 100%;
    height: auto;
    object-fit: cover;
  }


  @media (max-width: 768px) {
    .multicolumn-section {
      justify-content: flex-start;
    }
  
    .column {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }
</style>

<div class="multicolumn-section">
  {% for block in section.blocks %}
    <div class="column">
      <a href="{{ block.settings.link }}">
        <img src="{{ block.settings.myImage | img_url: 'medium' }}">
      </a>
      <h2>
        <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
      </h2>
    </div>
  {% endfor %}
</div>

{% schema %}
{
    "name": "Gallery",
    "settings": [
      {
        "type": "range",
        "label": "Select Number Of Columns",
        "id": "numColumns",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "image_picker",
        "label": "Default Image",
        "id": "defaultImage"
      },
      {
        "type": "text",
        "label": "Default Title",
        "id": "defaultTitle",
        "default": "Default Title"
      },
      {
        "type": "color",
        "label": "Title Color",
        "id": "titleColor",
        "default": "#000000"
      },
      {
        "type": "font_picker",
        "label": "Title Font",
        "id": "titleFont",
        "default": "Arial" 
      }
    ],
    "blocks": [
        {
            "type": "column",
            "name": "Column",
            "settings": [
                {
                    "type": "image_picker",
                    "label": "Select Image",
                    "id": "myImage"
                },
                {
                    "type": "text",
                    "label": "Title",
                    "id": "title"
                },
                {
                    "type": "url",
                    "label": "Link",
                    "id": "link"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Gallery",
        "category": "Custom"
      }
    ]
}
{% endschema %}
