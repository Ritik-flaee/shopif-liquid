<style>
  .multicolumn-section1 {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: -10px;
  }

  .column {
    flex: 1 0 300px;
    padding: 10px;
    background-color: #ffffff;
    border: 1px solid #ffffff;
    text-align: left;
    box-sizing: border-box;
    margin: 10px;
  }
  .column img {
    display: block;
    margin: 0;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .multicolumn-section1 {
      justify-content: flex-start;
    }
  
    .column {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }
</style>

<div class="multicolumn-section1">
  {% for block in section.blocks %}
    <div class="column">
      <a href="{{ block.settings.link }}">
        <img src="{{ block.settings.myImage | img_url: 'medium' }}">
      </a>
      <h2>
        <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
      </h2>
    </div>
  {% endfor %}
</div>

{% schema %}
{
    "name": "Gallery",
    "settings": [],
    "blocks": [
        {
            "type": "column",
            "name": "Column",
            "settings": [
                {
                    "type": "image_picker",
                    "label": "Select Image",
                    "id": "myImage"
                },
                {
                    "type": "text",
                    "label": "Title",
                    "id": "title"
                },
                {
                    "type": "url",
                    "label": "Link",
                    "id": "link"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Gallery",
        "category": "Reference"
      }
    ]
}
{% endschema %}
